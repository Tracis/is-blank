{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "src"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        80
      ]
    },
    "interface-name": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "only-arrow-functions": false
  },
  "linterOptions": {
    "exclude": [
      "src/*test.ts"
    ]
  }
}